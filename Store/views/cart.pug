block content

  div
    span Name | 
    span Price | 
    span Quantity | 
    span Subtotal 

  each p in products
    div
      span #{p.product.name} | 
      span $#{p.product.price} | 
      span #{p.quantity} | 
      span #{p.product.price * p.quantity} |

